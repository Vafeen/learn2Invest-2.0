<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="291dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="291dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.00">

        <View
            android:id="@+id/balance_card"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:background="@drawable/tabs_in_dialogs_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_od_dialog"
            app:layout_constraintVertical_bias="0.108" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_exit"
            android:layout_width="119dp"
            android:layout_height="42dp"
            android:backgroundTint="@color/cancel"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/exit"
            android:textAllCaps="true"
            android:textAppearance="@style/Text.SemiBold.14"
            android:textColor="@color/black"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_refill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_refill"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/name_od_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refill_account"
            android:textAppearance="@style/Text.Regular.14"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.106" />

        <View
            android:id="@+id/entering_sum_of_balance_card"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tabs_in_dialogs_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance_card"
            app:layout_constraintVertical_bias="0.107" />

        <EditText
            android:id="@+id/entering_sum_of_balance_refill_account_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_dialogs_card_content"
            android:layout_marginHorizontal="6dp"
            android:background="@drawable/tabs_in_dialogs_shape"
            android:drawableEnd="@drawable/circle_close"
            android:hint="@string/enter_sum"
            android:inputType="numberDecimal"
            android:textAppearance="@style/Text.Regular.14"
            app:layout_constraintBottom_toBottomOf="@+id/entering_sum_of_balance_card"
            app:layout_constraintEnd_toEndOf="@+id/entering_sum_of_balance_card"
            app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintStart_toStartOf="@+id/entering_sum_of_balance_card"
            app:layout_constraintTop_toTopOf="@+id/entering_sum_of_balance_card"
            app:layout_constraintVertical_bias="0.451" />

        <View
            android:id="@+id/dollar_view_refill_account_dialog"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="@dimen/margin_dialogs_card_content"
            android:background="@drawable/dollar_cash"
            app:layout_constraintBottom_toBottomOf="@+id/balance_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"

            app:layout_constraintStart_toStartOf="@+id/balance_card"
            app:layout_constraintTop_toTopOf="@+id/balance_card"
            app:layout_constraintVertical_bias="0.466" />

        <TextView
            android:id="@+id/account_textview_refill_account_dialog"
            android:layout_width="131dp"
            android:layout_height="24dp"

            android:text="@string/account"
            android:textAppearance="@style/Text.Medium.14"
            app:layout_constraintBottom_toBottomOf="@+id/balance_card"
            app:layout_constraintEnd_toEndOf="@+id/balance_card"
            app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintStart_toEndOf="@+id/dollar_view_refill_account_dialog"
            app:layout_constraintTop_toTopOf="@+id/balance_card"
            app:layout_constraintVertical_bias="0.038" />


        <TextView
            android:id="@+id/balance_textview_refill_account_dialog"
            android:layout_width="131dp"
            android:layout_height="24dp"
            android:text="@string/example_balance"
            android:textAppearance="@style/Text.Medium.14"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/balance_card"
            app:layout_constraintEnd_toEndOf="@+id/balance_card"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/account_textview_refill_account_dialog"
            app:layout_constraintTop_toBottomOf="@+id/account_textview_refill_account_dialog"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_refill"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/view_background"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/refill"
            android:textAllCaps="true"
            android:textAppearance="@style/Text.SemiBold.14"
            android:textColor="#000000"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entering_sum_of_balance_card"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>