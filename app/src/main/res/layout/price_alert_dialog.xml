<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="491dp"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="491dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <View
            android:id="@+id/price_card_price_alert_dialog3"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tabs_in_dialogs_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/price_card_price_alert_dialog2"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/price_card_price_alert_dialog2"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tabs_in_dialogs_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_card_price_alert_dialog"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/price_card_price_alert_dialog"
            android:layout_width="238dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/tabs_in_dialogs_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/name_od_dialog_price_alert_dialog"
            app:layout_constraintVertical_bias="0.00" />

        <ImageButton
            android:id="@+id/price_clear_alert_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/circle_close"

            app:layout_constraintBottom_toBottomOf="@+id/price__price_alert_dialog"
            app:layout_constraintStart_toEndOf="@+id/price__price_alert_dialog"
            app:layout_constraintTop_toTopOf="@+id/price__price_alert_dialog" />

        <ImageButton
            android:id="@+id/price_in_percent_clear_alert_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/circle_close"

            app:layout_constraintBottom_toBottomOf="@+id/price_in_percent_price_alert_dialog"
            app:layout_constraintStart_toEndOf="@+id/price_in_percent_price_alert_dialog"
            app:layout_constraintTop_toTopOf="@+id/price_in_percent_price_alert_dialog" />

        <ImageButton
            android:id="@+id/comment_clear_alert_dialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/circle_close"

            app:layout_constraintBottom_toBottomOf="@+id/comment_alert_dialog"
            app:layout_constraintStart_toEndOf="@+id/comment_alert_dialog"
            app:layout_constraintTop_toTopOf="@+id/comment_alert_dialog" />

        <EditText
            android:id="@+id/price__price_alert_dialog"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/margin_dialogs_card_content_start"
            android:layout_marginEnd="@dimen/margin_dialogs_card_content_end_for_icon"
            android:autofillHints="@string/price_name"
            android:background="@drawable/tabs_in_dialogs_shape"
            android:hint="@string/price_name"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textAppearance="@style/Text.Medium.14"
            app:layout_constraintBottom_toBottomOf="@+id/price_card_price_alert_dialog"
            app:layout_constraintEnd_toEndOf="@+id/price_card_price_alert_dialog"
            app:layout_constraintStart_toStartOf="@+id/price_card_price_alert_dialog"
            app:layout_constraintTop_toTopOf="@+id/price_card_price_alert_dialog"
            app:layout_constraintVertical_bias="0.5" />


        <EditText
            android:id="@+id/price_in_percent_price_alert_dialog"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/margin_dialogs_card_content_start"
            android:layout_marginEnd="@dimen/margin_dialogs_card_content_end_for_icon"
            android:background="@drawable/tabs_in_dialogs_shape"
            android:hint="@string/changing_price"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textAppearance="@style/Text.Medium.14"
            app:layout_constraintBottom_toBottomOf="@+id/price_card_price_alert_dialog2"
            app:layout_constraintEnd_toEndOf="@+id/price_card_price_alert_dialog2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/price_card_price_alert_dialog2"
            app:layout_constraintTop_toTopOf="@+id/price_card_price_alert_dialog2"
            app:layout_constraintVertical_bias="0.5" />

        <EditText
            android:id="@+id/comment_alert_dialog"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/margin_dialogs_card_content_start"
            android:layout_marginEnd="@dimen/margin_dialogs_card_content_end_for_icon"
            android:background="@drawable/tabs_in_dialogs_shape"
            android:hint="@string/comment"
            android:textAppearance="@style/Text.Medium.14"
            app:layout_constraintBottom_toBottomOf="@+id/price_card_price_alert_dialog3"
            app:layout_constraintEnd_toEndOf="@+id/price_card_price_alert_dialog3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/price_card_price_alert_dialog3"
            app:layout_constraintTop_toTopOf="@+id/price_card_price_alert_dialog3"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/name_od_dialog_price_alert_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_alert_text"
            android:textAppearance="@style/Text.Regular.16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.096" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_exit_price_alert_dialog"
            android:layout_width="119dp"
            android:layout_height="42dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/cancel"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/exit"
            android:textAllCaps="true"
            android:textAppearance="@style/Text.SemiBold.14"
            android:textColor="@color/black"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_create_price_alert_price_alert_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_create_price_alert_price_alert_dialog"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_create_price_alert_price_alert_dialog"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginHorizontal="5dp"
            android:backgroundTint="@color/view_background"
            android:gravity="center"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="@string/add_price_alert"
            android:textAllCaps="true"
            android:textAppearance="@style/Text.SemiBold.14"
            android:textColor="#000000"
            app:cornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>